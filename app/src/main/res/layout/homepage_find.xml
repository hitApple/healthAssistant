<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/homepage_background">
    <RelativeLayout
        android:id="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/homepage_find_searchicon"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/search"
                android:contentDescription="TODO" />
            <EditText
                android:layout_toRightOf="@+id/homepage_find_searchicon"
                android:id="@+id/homepage_find_search"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttongreen"/>


            <ImageView
                android:layout_toRightOf="@+id/homepage_find_search"
                android:layout_width="36dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/message" />

        </RelativeLayout>




        <ScrollView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/xinagmu1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/buttonwhite"
                    android:text="qwe"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/homepage_weather"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:layout_below="@+id/xinagmu1"
                    android:layout_alignLeft="@+id/xinagmu1"
                    android:layout_alignRight="@+id/xinagmu1"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonwhite"
                    android:text="暂时无法获取当前城市的天气信息"
                    android:textSize="20sp" />

                <TextView

                    android:id="@+id/xinagmu3"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:layout_alignLeft="@+id/xinagmu1"
                    android:layout_alignRight="@+id/xinagmu1"
                    android:layout_below="@+id/homepage_weather"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/buttonwhite"
                    android:text="qwe"
                    android:textSize="30sp" />
            </RelativeLayout>


        </ScrollView>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <include
                android:id="@+id/homepage_find_bottom"
                layout="@layout/bottomfunctionbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>


    <include
        android:id="@+id/plus_ui"
        layout="@layout/plus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
</RelativeLayout>