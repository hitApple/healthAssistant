<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background">

    <RelativeLayout
        android:id="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/personal_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/personal_setting"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/setting" />

                <TextView
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="个人中心"
                    android:textColor="#FFFAFA"
                    android:layout_centerHorizontal="true"
                    android:textSize="26dp" />

                <ImageView
                    android:id="@+id/message_unread"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/message_unread"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personal_2"
                android:layout_below="@+id/personal_1"
                android:layout_width="match_parent"
                android:layout_height="157dp">

                <com.example.app3.CircleImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/personal_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/headpic"/>


                <TextView
                    android:id="@+id/username"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:text="用户昵称户昵那"
                    android:paddingLeft="40dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:layout_marginTop="20dp"
                    android:paddingRight="40dp"
                    android:layout_toRightOf="@id/personal_pic"
                    android:textSize="22dp"
                    android:background="@drawable/name"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/personal_3"
                android:layout_below="@+id/personal_2"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="   医院书签"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"/>
                <View
                    android:layout_width="4dp"
                    android:layout_height="50dp"
                    android:background="#4876FF"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:text="  我的朋友"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:textSize="25dp" />
            </RelativeLayout>
            <!--分割线-->
            <View
                android:id="@+id/personal_hr"
                android:layout_below="@+id/personal_3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#4876FF"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="405dp"
                android:layout_below="@+id/personal_hr">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/par"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/me_list1_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="舒张压："
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/me_list1_2"/>

                    <TextView
                        android:id="@+id/me_list1_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="舒张压："
                        android:textSize="30sp"
                        app:layout_constraintTop_toTopOf="@id/me_list1_1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/me_list1_1"
                        android:gravity="end" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/me_list1_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DC838383"/>

                    <TextView
                        android:id="@+id/me_list2_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/me_list1_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/me_list2_2"/>

                    <TextView
                        android:id="@+id/me_list2_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/me_list1_1"
                        app:layout_constraintLeft_toRightOf="@id/me_list2_1"
                        android:gravity="end" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/me_list2_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DC838383"/>

                    <TextView
                        android:id="@+id/me_list3_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/me_list2_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/me_list3_2"/>

                    <TextView
                        android:id="@+id/me_list3_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/me_list2_1"
                        app:layout_constraintLeft_toRightOf="@id/me_list3_1"
                        android:gravity="end" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/me_list3_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DC838383"/>

                    <TextView
                        android:id="@+id/me_list4_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/me_list3_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/me_list4_2"/>

                    <TextView
                        android:id="@+id/me_list4_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/me_list3_1"
                        app:layout_constraintLeft_toRightOf="@id/me_list4_1"
                        android:gravity="end" />

                    <View
                        app:layout_constraintTop_toBottomOf="@id/me_list4_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DC838383"/>

                    <TextView
                        android:id="@+id/me_list5_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/me_list4_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/me_list5_2"/>

                    <TextView
                        android:id="@+id/me_list5_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/me_list4_1"
                        app:layout_constraintLeft_toRightOf="@id/me_list5_1"
                        android:gravity="end"/>

                    <View
                        app:layout_constraintTop_toBottomOf="@id/me_list5_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DC838383"/>

                    <TextView
                        android:id="@+id/me_list6_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toBottomOf="@id/me_list5_1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/me_list6_2"/>

                    <TextView
                        android:id="@+id/me_list6_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="收缩压："
                        android:textSize="30sp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/me_list5_1"
                        app:layout_constraintLeft_toRightOf="@id/me_list6_1"
                        android:gravity="end" />
                    <View
                        app:layout_constraintTop_toBottomOf="@id/me_list6_1"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#DC838383"/>
                    <Button
                        android:id="@+id/exit_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:lines="2"
                        android:text="退出登录"
                        android:textSize="20sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/me_list6_1" />

                    <TextView
                        app:layout_constraintTop_toBottomOf="@id/exit_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="5"
                        android:visibility="invisible"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:background="#FFFFFf"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <include
                android:id="@+id/homepage_find_bottom"
                layout="@layout/bottomfunctionbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </RelativeLayout>




    <include
        layout="@layout/plus2"
        android:id="@+id/plus_ui2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="-270dp"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/head_portrait"
        android:background="#000000"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.app3.CircleImageView
            android:layout_centerHorizontal="true"

            android:id="@+id/personal_pic_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/setting"/>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/personal_take_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="拍照"
                android:textSize="25dp"/>
            <Button

                android:id="@+id/personal_photo_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personal_take_photo"
                android:layout_alignRight="@+id/personal_take_photo"
                android:layout_alignLeft="@+id/personal_take_photo"
                android:text="相册"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/photo_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/personal_photo_album"
                android:layout_alignRight="@+id/personal_take_photo"
                android:layout_alignLeft="@+id/personal_take_photo"
                android:text="取消"
                android:textSize="25dp"/>
        </RelativeLayout>



    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/setUerName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#74FFFFFF"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:background="@drawable/namebiankuang" />


        <EditText
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/editName"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_rect_xml3"
            android:maxLength="7"
            android:maxLines="1"
            android:hint="请输入名称"/>

        <Button
            android:id="@+id/cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editName"
            android:layout_alignLeft="@id/editName"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/buttonblue"
            android:text="取消" />

        <Button
            android:id="@+id/determine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cross"
            android:layout_alignRight="@+id/editName"
            android:layout_marginRight="30dp"
            android:background="@drawable/buttonblue"
            android:text="确定" />
    </RelativeLayout>

</RelativeLayout>
