<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.app3.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/head_person"
        android:layout_alignTop="@+id/title_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_back"/>
    <TextView
        android:id="@+id/title_name"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名:"
        android:textSize="25dp"/>
    <EditText
        android:layout_alignTop="@+id/title_name"
        android:layout_toRightOf="@+id/title_name"
        android:id="@+id/real_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="10"
        android:background="@drawable/buttongray"/>
    <TextView
        android:id="@+id/title_sex"
        android:layout_below="@+id/title_name"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓别:"
        android:textSize="25dp"/>
    <RadioGroup
        android:layout_alignTop="@+id/title_sex"
        android:layout_toRightOf="@+id/title_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/myself_boy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="30dp" />

        <RadioButton
            android:layout_marginLeft="10dp"
            android:id="@+id/myself_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女"
            android:textSize="30dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/title_born"
        android:layout_below="@+id/title_sex"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出生日期:"
        android:textSize="25dp"/>
    <EditText
        android:layout_alignTop="@+id/title_born"
        android:layout_toRightOf="@+id/title_born"
        android:id="@+id/real_born"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxLength="10"
        android:background="@drawable/buttongray"/>

</RelativeLayout>
