<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">
    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="后天"
        android:textColor="#FC0625EC"
        android:textStyle="bold"
        android:textSize="35sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/highAndLow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最高/低温： "
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/title3"/>
    <TextView
        android:id="@+id/place3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textSize="25sp"
        android:text="地点："
        app:layout_constraintTop_toBottomOf="@+id/highAndLow3"/>
    <TextView
        android:id="@+id/nowWeather3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textSize="25sp"
        android:text="天气："
        app:layout_constraintTop_toBottomOf="@+id/place3"/>
    <TextView
        android:id="@+id/directionOfWind3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textSize="25sp"
        android:text="风力/风向："
        app:layout_constraintTop_toBottomOf="@+id/nowWeather3"/>
    <TextView
        android:id="@+id/recommendation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:textSize="20sp"
        android:text="建议："
        app:layout_constraintTop_toBottomOf="@+id/directionOfWind3"/>

    <ImageView
        android:id="@+id/dayAfterTomorrow3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recommendation3"
        android:layout_marginTop="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
