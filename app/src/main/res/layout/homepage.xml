    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CD136ECD">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:id="@+id/full"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homepage_title_find"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp">


            <EditText
                android:id="@+id/homepage_search"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_rect_xml2"
                android:paddingLeft="10dp"
                android:hint="输入搜索信息" />

            <ImageView
                android:id="@+id/homepage_search_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/search"
                app:layout_constraintRight_toRightOf="@id/homepage_search"
                app:layout_constraintTop_toTopOf="@id/homepage_search"
                app:layout_constraintBottom_toBottomOf="@id/homepage_search"
                android:layout_marginRight="10dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eightsystem"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/homepage_title_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/rounded_rect_xml">

            <androidx.constraintlayout.widget.ConstraintLayout
