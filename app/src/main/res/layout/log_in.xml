<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/main_activity_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_activity_bg1"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="98dp">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/logo2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:alpha="0.7"
            android:background="@drawable/txt_radiuborder"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号："
                android:textSize="20sp">

            </TextView>

            <EditText
                android:id="@+id/user"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@null"
                android:maxLength="15"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/txt_radiuborder"
            android:gravity="center_horizontal"
            android:alpha="0.7"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密     码："
                android:textSize="20sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="210dp"
                android:layout_height="50dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                android:selectAllOnFocus="true"
                android:singleLine="true" />

            <ImageView
                android:id="@+id/eyeview_off"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/eyeview_off" />

            <ImageView
                android:id="@+id/eyeview_on"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/eyeview_on"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/remember_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="记住密码" />

            <CheckBox
                android:id="@+id/auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

<!--            <Button-->
<!--                android:id="@+id/LogIn"-->
<!--                android:layout_width="264dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/buttonblue"-->
<!--                android:text="登录"-->
<!--                android:textSize="24dp" />-->

            <ImageView
                android:id="@+id/LogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/login_button"/>

            <ImageView
                android:id="@+id/SignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/register_button"/>

<!--            <Button-->
<!--                android:id="@+id/SignIn"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:background="@drawable/buttongreen"-->
<!--                android:text="注册"-->
<!--                android:textSize="24dp" />-->

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/main_activity_find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="找回密码"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/main_activity_split"
        app:layout_constraintHorizontal_bias="0.9"
        android:textColor="#515151"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/main_activity_split"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="|"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/main_activity_contact_us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="联系我们"
        app:layout_constraintLeft_toLeftOf="@id/main_activity_split"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        android:textColor="#515151"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>